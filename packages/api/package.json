{
  "name": "@flintapi/api",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "pnpm with-env tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "db:migrate": "npx drizzle-kit migrate --config ./dist/drizzle.config.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "pnpm with-env vitest run",
    "build": "tsc && tsc-alias",
    "with-env": "dotenv -e .env --"
  },
  "dependencies": {
    "@bull-board/api": "^6.12.7",
    "@bull-board/hono": "^6.12.7",
    "@flintapi/shared": "workspace:*",
    "@hono/node-server": "^1.18.1",
    "@hono/zod-openapi": "^1.0.2",
    "@scalar/hono-api-reference": "^0.9.13",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "hono": "^4.8.12",
    "hono-pino": "^0.10.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "redlock": "5.0.0-beta.2",
    "stoker": "2.0.1",
    "svix": "^1.75.0",
    "viem": "^2.37.8"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@types/node": "^24.2.0",
    "@types/redlock": "^4.0.7",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}
