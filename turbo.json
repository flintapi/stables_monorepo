{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": ["**/.env.*local", "**/.env*", "**/.env"],
  "envMode": "loose",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "@flintapi/shared#build": {
      "dependsOn": ["^build"],
      "outputs": []
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": []
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["@flintapi/shared#build"]
    },
    "lint": {
      "outputs": []
    }
  }
}
