{
  "compilerOptions": {
    "target": "ESNext",
    "jsx": "react-jsx",
    "jsxImportSource": "hono/jsx",
    "baseUrl": ".",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "rootDir": "./",
    "typeRoots": ["../../node_modules/@types"],
    "types": ["node"],
    "strict": true,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "skipLibCheck": true,
    "declaration": true,
    "allowJs": true,
    "checkJs": true
  },
  "tsc-alias": {
    "resolveFullPaths": true
  }
}
