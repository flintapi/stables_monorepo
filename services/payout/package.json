{
  "name": "@flintapi/payout",
  "type": "module",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node ./dist/src/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "cross-env NODE_ENV=test vitest",
    "vitest": "pnpm with-env vitest run",
    "build": "tsc && tsc-alias",
    "db:generate": "pnpm with-env npx drizzle-kit generate --config=./dist/drizzle.config.js",
    "db:migrate": "pnpm with-env npx drizzle-kit migrate --config=./dist/drizzle.config.js",
    "with-env": "dotenv -e .env --"
  },
  "dependencies": {
    "@hono/node-server": "^1.18.1",
    "@hono/zod-openapi": "^1.0.2",
    "@libsql/client": "^0.15.10",
    "@scalar/hono-api-reference": "^0.9.13",
    "@upstash/qstash": "^2.8.2",
    "@upstash/workflow": "^0.2.17",
    "bullmq": "^5.58.0",
    "cron": "^4.3.3",
    "dotenv": "^17.2.1",
    "dotenv-expand": "^12.0.2",
    "drizzle-orm": "^0.44.4",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.12",
    "hono-pino": "^0.10.1",
    "ioredis": "^5.7.0",
    "pg": "^8.16.3",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "redlock": "5.0.0-beta.2",
    "stoker": "2.0.1",
    "svix": "^1.75.0",
    "zod": "^4.0.14"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^5.1.0",
    "@types/node": "^24.2.0",
    "@types/pg": "^8.15.5",
    "@types/redlock": "^4.0.7",
    "cross-env": "^10.0.0",
    "drizzle-kit": "^0.31.4",
    "eslint": "^9.32.0",
    "eslint-plugin-format": "^1.0.1",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "vitest": "^3.2.1"
  }
}