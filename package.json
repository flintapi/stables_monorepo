  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*",
    "services/*"
  ],
  "packageManager": "pnpm@10.8.1",
  "scripts": {
    "app:faucet:dev": "turbo dev --filter=@flintapi/faucet",
    "dev": "turbo dev",
    "dev:app:console": "turbo dev --parallel --filter=@flintapi/api --filter=@flintapi/console",
    "dev:packages:api": "turbo dev --filter=@flintapi/api",
    "db": "pnpm run --filter @flintapi/payout db:generate && pnpm run --filter @flintapi/payout db:migrate",
    "build:services:payout": "pnpm run --filter @flintapi/payout build",
    "start:services:payout": "pnpm run --filter @flintapi/payout start",
    "deploy": "flyctl deploy --config ./services/payout/fly.toml --dockerfile ./Dockerfile --build-arg DATABASE_URL='postgresql://neondb_owner:npg_Vi8RSIKLkj0N@ep-holy-base-abke7cgz-pooler.eu-west-2.aws.neon.tech/neondb?sslmode=require&channel_binding=require'"
  },
  "dependencies": {
    "@better-fetch/fetch": "^1.1.18",
    "better-auth": "1.3.8",
    "bullmq": "^5.58.5",
    "dotenv": "^16.6.1",
    "dotenv-cli": "^9.0.0",
    "dotenv-expand": "^12.0.3",
    "ioredis": "5.6.0",
    "viem": "^2.37.3",
    "winston": "^3.17.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^3.16.0",
    "@types/node": "^22.18.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.35.0",
    "eslint-plugin-format": "^0.1.3",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.5",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2",
    "vitest": "^2.1.9"
  }
}
